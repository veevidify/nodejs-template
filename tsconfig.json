{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Node 18",
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "dist/",
        "lib": [ "es2022" ],
        "module": "commonjs",
        "resolveJsonModule": true,
        "target": "es2022",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node"
    }
}
